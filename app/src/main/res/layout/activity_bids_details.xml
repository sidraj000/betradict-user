<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bidsDetails"
    android:background="@mipmap/appbg">

    <TextView
        android:id="@+id/tvquesthead"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="heading"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:textSize="30dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="50dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/aldrich"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="Option"
            android:textSize="18dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/aldrich"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="Rate"
            android:textSize="18dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/aldrich"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="Bid"
            android:textSize="18dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="RunAway"
            android:textSize="18dp"
            android:fontFamily="@font/aldrich"
            android:gravity="center"
            android:layout_weight="1"/>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="80dp"
        android:id="@+id/bidsrecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/answered_questions"></android.support.v7.widget.RecyclerView>

</FrameLayout>